{%- extends '@WexBaseBundle/Resources/templates/bases/json/default.html.twig' -%}

{%- block layout_composer_json -%}
    {%- set content -%}
        {{ parent() }}
    {%- endset -%}
    {%- block layout_composer_modal -%}
        {{ content }}
    {%- endblock -%}
{%- endblock -%}

{%- block page_composer_json -%}
    <div class="modal-header">
        <h2>{{ page_title | trans }}</h2>
        <div class="modal-close">
            <a href="#">
                {{ icon('close') }}
            </a>
        </div>
    </div>
    <div class="modal-loading">
        <div class="modal-loading-bar"></div>
    </div>
    <div class="modal-body">
        {%- block page_composer_modal -%}
            {{ block('page_body') }}
        {%- endblock -%}
    </div>
{%- endblock -%}