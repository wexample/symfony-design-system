<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
         bootstrap="tests/bootstrap.php"
         colors="true"
         executionOrder="default"
>
    <php>
        <env name="APP_ENV" value="test"/>
        <env name="APP_DEBUG" value="1"/>
        <env name="KERNEL_CLASS" value="Wexample\SymfonyDesignSystem\Tests\Fixtures\App\AppKernel"/>
    </php>

    <testsuites>
        <testsuite name="unit">
            <directory>tests/Unit</directory>
        </testsuite>

        <testsuite name="integration">
            <directory>tests/Integration</directory>
        </testsuite>
    </testsuites>

    <source>
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <exclude>
            <file>src/Controller/Config/AbstractDesignSystemShowcaseController.php</file>
            <file>src/Controller/AbstractDesignSystemController.php</file>
            <file>src/Controller/AbstractPagesController.php</file>
            <file>src/Interface/DesignSystemBundleInterface.php</file>
        </exclude>
    </source>

</phpunit>
