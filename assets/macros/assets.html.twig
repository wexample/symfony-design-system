{% macro render_available_css(render_pass, usage, context_type) %}
    {% for asset in assets_type_filtered(render_pass, context_type, usage, 'css') %}
        {%- if assets_needs_initial_render(render_pass, asset) -%}
            {% if not render_pass.enableAggregation %}
              <link id="{{ asset.id }}" rel="stylesheet" media="{{ asset.media }}" href="{{ asset(asset.path) }}"/>
            {% endif %}
            {{ asset.setServerSideRendered() }}
        {%- endif -%}
    {% endfor %}
{% endmacro %}

{% macro render_available_js(render_pass, usage, context_type) %}
    {%- for asset in assets_type_filtered(render_pass, context_type, usage, 'js') -%}
        {%- if assets_needs_initial_render(render_pass, asset) -%}
            {% if not render_pass.enableAggregation %}
              <script id="{{ asset.id }}" type="text/javascript" src="{{ asset(asset.path) }}"></script>
            {% endif %}
            {{ asset.setServerSideRendered() }}
        {%- endif -%}
    {%- endfor -%}
{% endmacro %}