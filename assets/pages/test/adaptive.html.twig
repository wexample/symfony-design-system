{%- extends '@WexampleSymfonyDesignSystemBundle/layouts/test/layout.html.twig' -%}

{%- block layout_config -%}
    {{ parent() }}
    {{- var_js('layoutLevelTestVar', 'value') -}}
{%- endblock -%}

{%- block page_config -%}
    {{ parent() }}
    {{- var_js('pageLevelTestVar', 'value') -}}
{%- endblock -%}

{%- block page_body -%}
    <div class="test-string">ADAPTIVE</div>
    <div class="adaptive-page-playground"></div>
    <ul>
        <li><span class="adaptive-page-test-js">JS</span> adaptive test</li>
        <li><span class="adaptive-page-test-css">CSS</span> adaptive test</li>
        <li class="adaptive-page-test-component">{{ component('components/test-component', {testOption:true}) }}</li>
        <li class="adaptive-page-test-vue">{{ vue('vue/test-vue', {testVuePropBool:true, testVuePropObject:{var:'val',var2:{varSub:'valSub'}}, testVuePropArray:['var','var2', true]}) }}</li>
        {% if not layout_use_js %}
            <li>NO_JS_TEXT</li>
        {% endif %}
    </ul>
{%- endblock -%}