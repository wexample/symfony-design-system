<article
  class="article-summary"
  itemscope itemtype="http://schema.org/Article"
>
    <div class="article-summary--image"{% if image | default(false) %} style="background-image:url('{{ image }}')"{% endif %}>
        <a class="article-summary--image-click-handler"
        aria-label="{{ title }}"
        href="{{ url }}"></a>
    </div>
    <div class="article-summary--content">
        <a href="{{ url }}" itemprop="url">
            <h2>{{ title }}</h2>
            <div class="article-summary--body">{{ body }}</div>
        </a>
        <div class="inline-info">
            {% for info_item in info %}
                <div class="info">{{ info_item }}</div>
            {% endfor %}
        </div>
    </div>
</article>